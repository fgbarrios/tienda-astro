---
import { links } from "../lib/info";
---

<footer>
    <div> 
        <img src="/logo.png" alt="Logo de tienda" width="150" height="50">
    </div>
    <div>
        <ul>
            {links.map(link => (
                <li>
                  <a href={link.slug} title={link.name}>{link.nombre}</a>
                </li>)
            )}
        </ul>
    </div>
</footer>

<style>
    footer{
        display: flex;
        justify-content: space-between;
        bottom: 0;
        height: 20px;
        background-color: #2b5eeb;
        color: whitesmoke;
        padding: 0 0.5rem;
    }
    ul{
        display: flex;
    }
    li{
        list-style-type: none;
        padding-right: 0.5rem;
    }
    li a{
        text-decoration: none;
        color: whitesmoke;
    }

    li a:hover{
        text-decoration: underline;
        text-underline-offset: 2px;
    }
</style>